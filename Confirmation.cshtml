@page
@model Class_Project.Pages.ConfirmationModel
@{
        ViewData["Title"] = "Confirmation";
}

<div class="text-center">
    <img src="~/Images/header-logo.jpg" class="headerLogo" />

    <h1>Diego's Paint Store</h1>

    <h4>Order Details</h4>
    <hr />
</div>

<p>Please confirm your order details! Once order is confirmed you will be rerouted to the index page!</p>
<form method="post">
    <div class="confirmation">
        <ul style="list-style-type: none">
            <li>
                <h6>First Name: </h6>
                <input class="form-control" />
            </li>
            <li>
                <h6>Last Name: </h6>
                <input class="form-control" />
            </li>
            <li>
                <h6>Phone Number: </h6>
                <input class="form-control" />
            </li>
            <li>
                <h6>Email: </h6>
                <input class="form-control" />
            </li>
            <li>
                <h6>Street Number/Name: </h6>
                <input class="form-control" />
            </li>
            <li>
                <h6>State Name: </h6>
                <input class="form-control" />
            </li>
            <li>
                <h6>Zip Code: </h6>
                <input class="form-control" />
            </li>
            <li>
                <h6>Surface Type: </h6>
                <input class="form-control" />
            </li>
            <li>
                <h6>Product Type: </h6>
                <input class="form-control" />
            </li>
            <li>
                <h6>Container Size: </h6>
                <input class="form-control" />
            </li>
            <li>
                <h6>Quantity: </h6>
                <input class="form-control" />
            </li>
            <li>
                <h6>Sheen: </h6>
                <input class="form-control" />
            </li>
            <li>
                <h6>Color: </h6>
                <input class="form-control" />
            </li>
            <li>
                <h6>Location: </h6>
                <input class="form-control" />
            </li>
        </ul>
    </div>

    <div class="form-group">
        <a class="btn btn-primary" asp-page="Location" style="background-color:red">Back</a>
        <a class="btn btn-primary" asp-page="Index" style="background-color:green">Place Order</a>
    </div>
</form>